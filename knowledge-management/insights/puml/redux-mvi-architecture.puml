@startuml redux-mvi-architecture
!theme plain
skinparam backgroundColor #FEFEFE
skinparam boxPadding 20
skinparam defaultFontSize 14
skinparam rectangleBorderColor #333333
skinparam rectangleBackgroundColor #F8F9FA
skinparam arrowColor #333333
skinparam arrowThickness 2

title Redux MVI Architecture Pattern

rectangle "USER INTERFACE\n(Pure React Components)" as UI #E3F2FD {
  rectangle "View Components" as View #FFFFFF
  rectangle "Container Components" as Container #FFFFFF
  rectangle "Typed Hooks\n(useAppDispatch, useAppSelector)" as Hooks #FFFFFF
}

rectangle "INTENTS\n(Async Thunks & Action Creators)" as Intent #FFF3E0 {
  rectangle "Coordinate complex operations" as Op1
  rectangle "Handle side effects" as Op2
  rectangle "Manage persistence" as Op3
}

rectangle "MODEL\n(Redux Store & Slices)" as Model #E8F5E9 {
  rectangle "Single source of truth" as Truth
  rectangle "Predictable state updates" as Updates
  rectangle "Automatic persistence triggers" as Triggers
}

' Connections
UI -down-> Intent : "User Actions"
Intent -down-> Model : "Dispatched Actions"
Model -up-> UI : "State Updates"

' Internal connections
View -right-> Hooks
Container -left-> Hooks
Hooks -down-> Intent

Op1 -down-> Op2
Op2 -down-> Op3

Truth -down-> Updates
Updates -down-> Triggers

@enduml