#!/bin/bash

# ukb - Update Knowledge Base
# The ultimate one-stop-shop command for capturing and transferring all session learnings
# to the knowledge base with validation and link updates

set -e

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
PURPLE='\033[0;35m'
NC='\033[0m' # No Color

# Knowledge management directory
KM_DIR="$HOME/Claude/knowledge-management"

echo -e "${PURPLE}üìö UKB - Update Knowledge Base${NC}"
echo -e "${BLUE}üöÄ The ultimate session learning transfer tool${NC}"
echo ""

# Step 1: Test MCP availability
echo -e "${YELLOW}‚ö° Step 1: Testing MCP availability...${NC}"
if [ -f "$KM_DIR/test-mcp-availability.sh" ]; then
    if ! "$KM_DIR/test-mcp-availability.sh"; then
        echo -e "${YELLOW}‚ö†Ô∏è  MCP not available, using local knowledge base${NC}"
    fi
else
    echo -e "${YELLOW}‚ö†Ô∏è  MCP test script not found${NC}"
fi
echo ""

# Step 2: Summarize current coding session
echo -e "${YELLOW}üìù Step 2: Summarizing current coding session...${NC}"
if [ -f "$KM_DIR/summarize-coding-session.sh" ]; then
    "$KM_DIR/summarize-coding-session.sh"
    echo -e "${GREEN}‚úÖ Session summary generated${NC}"
else
    echo -e "${RED}‚ùå Session summary script not found${NC}"
fi
echo ""

# Step 3: Enhanced insight capture with validation
echo -e "${YELLOW}üéØ Step 3: Capturing enhanced insights with validation...${NC}"
if [ -f "$KM_DIR/enhanced-capture-insight.sh" ]; then
    "$KM_DIR/enhanced-capture-insight.sh" --validate --auto-detect
    echo -e "${GREEN}‚úÖ Enhanced insights captured and validated${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Enhanced capture not available, using standard capture${NC}"
    if [ -f "$KM_DIR/capture-coding-insight.sh" ]; then
        "$KM_DIR/capture-coding-insight.sh"
        echo -e "${GREEN}‚úÖ Standard insights captured${NC}"
    else
        echo -e "${RED}‚ùå No capture scripts available${NC}"
    fi
fi
echo ""

# Step 4: Validate knowledge connections
echo -e "${YELLOW}üîó Step 4: Validating knowledge connections...${NC}"
if [ -f "$KM_DIR/validate-knowledge-connections.sh" ]; then
    "$KM_DIR/validate-knowledge-connections.sh"
    echo -e "${GREEN}‚úÖ Knowledge connections validated${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Knowledge validation script not found${NC}"
fi
echo ""

# Step 5: Update knowledge graph
echo -e "${YELLOW}üìä Step 5: Updating knowledge graph...${NC}"
if [ -f "$KM_DIR/update-knowledge-graph.sh" ]; then
    "$KM_DIR/update-knowledge-graph.sh"
    echo -e "${GREEN}‚úÖ Knowledge graph updated${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Knowledge graph update script not found${NC}"
fi
echo ""

# Step 6: Auto-fix knowledge graph if needed
echo -e "${YELLOW}üîß Step 6: Auto-fixing knowledge graph...${NC}"
if [ -f "$KM_DIR/auto-fix-knowledge-graph.sh" ]; then
    "$KM_DIR/auto-fix-knowledge-graph.sh"
    echo -e "${GREEN}‚úÖ Knowledge graph auto-fixed${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Auto-fix script not found${NC}"
fi
echo ""

# Step 7: Refresh knowledge base
echo -e "${YELLOW}üîÑ Step 7: Refreshing knowledge base...${NC}"
if [ -f "$KM_DIR/refresh-knowledge-base.sh" ]; then
    "$KM_DIR/refresh-knowledge-base.sh"
    echo -e "${GREEN}‚úÖ Knowledge base refreshed${NC}"
else
    echo -e "${YELLOW}‚ö†Ô∏è  Refresh script not found${NC}"
fi
echo ""

# Final summary
echo -e "${PURPLE}üéâ UKB Complete!${NC}"
echo -e "${GREEN}‚úÖ All session learnings have been captured and transferred${NC}"
echo -e "${GREEN}‚úÖ Knowledge base updated with validation${NC}"
echo -e "${GREEN}‚úÖ All links and connections verified${NC}"
echo ""
echo -e "${BLUE}üí° View your updated knowledge base with: vkb${NC}"
echo -e "${BLUE}üí° Query your knowledge with: $KM_DIR/query-coding-knowledge.sh${NC}"
echo ""