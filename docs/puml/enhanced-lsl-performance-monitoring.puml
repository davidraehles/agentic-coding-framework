@startuml enhanced-lsl-performance-monitoring
!include _standard-style.puml
!define TITLE Enhanced LSL Performance Monitoring Dashboard

title TITLE

package "Performance Monitoring System" {
  
  package "Enhanced Operational Logger" as logger {
    component [Performance Tracker] as tracker <<core>>
    component [Health Monitor] as health <<core>>
    component [Metrics Aggregator] as aggregator <<util>>
    component [Alert Generator] as alertGen <<api>>
  }
  
  package "Real-time Dashboard" as dashboard {
    component [System Metrics View] as sysMetrics <<api>>
    component [Security Metrics View] as secMetrics <<api>>
    component [Performance Charts] as charts <<api>>
    component [Alert Console] as alertConsole <<api>>
  }
  
  database "Performance Database" as perfDB <<storage>>
  database "Health Metrics" as healthDB <<storage>>
  cloud "Monitoring APIs" as monitoringAPIs <<external>>
}

package "Data Sources" {
  component [Enhanced Redaction System] as redaction <<security>>
  component [LSL File Manager] as fileManager <<storage>>
  component [User Hash Generator] as userHash <<security>>
  component [Live Logging Coordinator] as coordinator <<core>>
  
  package "System Resources" as resources {
    component [Memory Usage] as memory <<external>>
    component [CPU Load] as cpu <<external>>
    component [Disk I/O] as disk <<external>>
    component [Network] as network <<external>>
  }
}

' Data collection flow
redaction SYNC_LINE tracker : "Processing Time\nThreats Detected\nEffectiveness %"
fileManager SYNC_LINE tracker : "Rotation Events\nCompression Ratio\nFile Sizes"
userHash SYNC_LINE tracker : "Hash Generation\nCollision Checks\nSecurity Events"
coordinator SYNC_LINE tracker : "Session Health\nProcess Status\nRecovery Events"

' Resource monitoring
memory SYNC_LINE health
cpu SYNC_LINE health
disk SYNC_LINE health
network SYNC_LINE health

' Internal logger flow
tracker CONTROL_LINE aggregator
health CONTROL_LINE aggregator
aggregator DATA_LINE perfDB
aggregator DATA_LINE healthDB
aggregator CONTROL_LINE alertGen

' Dashboard connections
perfDB DATA_LINE sysMetrics
perfDB DATA_LINE charts
healthDB DATA_LINE secMetrics
alertGen ASYNC_LINE alertConsole

' External integration
dashboard DATA_LINE monitoringAPIs
alertGen ASYNC_LINE monitoringAPIs

' Key metrics annotations
note top of tracker : Sub-millisecond Response\n98.3% Security Effectiveness\n5x Performance Improvement

note top of health : Real-time System Health\nAutomatic Anomaly Detection\nProactive Alert Generation

note right of charts : - Redaction Performance\n- File Rotation Metrics\n- Security Threat Timeline\n- System Resource Usage\n- User Session Analytics

note bottom of alertConsole : Configurable Thresholds\nEscalation Policies\nIntegration Ready

@enduml